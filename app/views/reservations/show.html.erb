<div class="container">
<h1>Reservation</h1>
<p>
  <strong>Owner:</strong>
  <%= link_to @reservation.user.email, user_path(@reservation.user.id) %>
</p>

<p>
  <strong>Date:</strong>
  <%= @reservation.slot.strftime("%Y-%m-%-d") %>
</p>

<p>
  <strong>Hour:</strong>
  <%= @reservation.slot.strftime("l:%M %p") %>
</p>

<p>
  <strong>Event:</strong>
  <%= @reservation.eventname %>
</p>

<% if @reservation.user == current_user %>
<%= link_to 'Edit', edit_reservation_path(@reservation) %> |
<% end %>
<%= link_to 'Back', reservations_path %>
</div>
