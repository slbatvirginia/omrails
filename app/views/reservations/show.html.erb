<div class="container">
<h1>Reservation</h1>
<p>
  <strong>User:</strong>
  <%= @reservation.user.email %>
</p>

<p>
  <strong>Slot:</strong>
  <%= @reservation.slot %>
</p>

<p>
  <strong>Date:</strong>
  <%= @reservation.slotdate %>
</p>

<p>
  <strong>Hour:</strong>
  <%= @reservation.slothour %>
</p>

<p>
  <strong>Event:</strong>
  <%= @reservation.eventname %>
</p>

<p>
  <strong>Category:</strong>
  <%= @reservation.eventtype %>
</p>

<% if @reservation.user == current_user %>
<%= link_to 'Edit', edit_reservation_path(@reservation) %> |
<% end %>
<%= link_to 'Back', reservations_path %>
</div>
